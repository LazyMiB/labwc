<?xml version="1.0"?>
<!--
  This is a very simple config file with many options missing. For a
  complete set of options with comments, see Labwc docs/rc.xml.all
-->
<labwc_config>

  <theme>
    <!-- <name>Onyx-black</name> -->
    <name>Loma</name>
    <icon>Obsidian-Amber</icon>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10"/>
  </theme>

  <desktops number="4" />

  <snapping>
    <!-- Set range to 0 to disable window snapping completely -->
    <range>0</range>
    <overlay enabled="yes">
      <delay inner="50" outer="50"/>
    </overlay>
    <topMaximize>yes</topMaximize>
    <notifyClient>always</notifyClient>
  </snapping>

  <keyboard>
    <default/>
    <layoutScope>global</layoutScope>
    <repeatRate>25</repeatRate>
    <repeatDelay>300</repeatDelay>
    <!-- Use a different terminal emulator -->
    <keybind key="W-Return">
      <action name="Execute" command="xfce4-terminal"/>
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None"/>
    </keybind>

    <numlock>off</numlock>

    <!--
       Suggested Xfce key bindings.
    -->
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ -5%" />
    </keybind>
    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ +5%" />
    </keybind>
    <keybind key="XF86_AudioMute">
      <action name="Execute" command="pactl set-sink-mute @DEFAULT_SINK@ toggle" />
    </keybind>
    <keybind key="Print">
      <action name="Execute" command="xfce4-screenshooter" />
    </keybind>
    <keybind key="W-q">
      <action name="Close" />
    </keybind>
    <keybind key="A-Tab">
      <action name="NextWindow" />
    </keybind>
    <keybind key="W-Tab">
      <action name="ToggleMaximize" />
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop" to="1" />
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2" />
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3" />
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop" to="4" />
    </keybind>
    <keybind key="Super_L-C">
      <action name="Execute" command="rofi -show calc"/>
    </keybind>
    <keybind key="Super_L-A">
      <action name="Execute" command="rofi -show combi -modes combi -combi-modes 'window,drun'"/>
    </keybind>
  </keyboard>

  <libinput>
    <device category="touchpad">
      <disableWhileTyping>no</disableWhileTyping>
    </device>
  </libinput>

  <magnifier>
    <width>400</width>
    <height>400</height>
    <initScale>2.0</initScale>
    <increment>0.4</increment>
    <useFilter>false</useFilter>
  </magnifier>

</labwc_config>
